{
  "presets": [
    ["@babel/preset-env", {
      "modules": "commonjs",
      "targets": {
        "browsers": ["last 2 versions"],
        "node": "current"
      },
      "useBuiltIns": "usage"
    }],
    "@babel/preset-react",
    "@babel/preset-stage-2"
  ],

  "plugins": [
    "universal-import"
  ],

  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    }
  }
}
